<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>


<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.facenetfx.UserController.LogInController">
    <VBox spacing="10" maxWidth="300">
        <padding>
            <Insets top="10"/>
        </padding>
        <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <Label text="Username:" />
        <TextField fx:id="usernameField" />
        <Label text="Password:" />
        <PasswordField fx:id="passwordField" />
        <Button text="Log In" fx:id="loginButton" onAction="#handleLogin" />
        <Label fx:id="loginMessage" style="-fx-font-size: 14px;"/>
    </VBox>
</StackPane>

